<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#262626"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="22sp"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="16dp"
              android:text="Recommended Music" android:id="@+id/textView"/>
    <Button   android:layout_width="wrap_content"
              android:layout_height="25sp"
              android:id="@+id/toRecommendedMusic"

              android:text="Back"
              android:textSize="18sp"
              android:background="#ff0000"
              android:layout_gravity="right" android:layout_above="@+id/lvRecommendedMusic"
              android:layout_alignParentRight="true" android:layout_marginRight="30dp"/>

    <GridView android:id="@+id/lvRecommendedMusic"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@color/trackListDividerColor"
              android:dividerHeight="1dp"
              android:background="#262626" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
              android:layout_marginTop="16dp">
    </GridView>

</RelativeLayout>